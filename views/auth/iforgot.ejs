<% layout('layouts/boilerplate') %>

<div class="row">
   <h1>Forgot Password</h1>
   <div class="col-6 offset-3">
      <form action="/forgot" method="POST" novalidate class="needs-validation">
         <div class="mb-3">
            <label class="form-label" for="title">email</label>
            <input class="form-control" type="email" name="user[email]" id="email" placeholder="email" required>
            <p class="valid-feedback">Looks Good!</p>
         </div>
         <div class="mb-3">
            <button class="btn btn-success">Recover Email</button>
         </div>
      </form>
   </div>
</div>