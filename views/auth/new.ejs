<% layout('layouts/boilerplate') %>

<div class="row">
   <h1>Register</h1>
   <div class="col-6 offset-3">
      <form action="/register/new?_method=PUT" method="POST" novalidate class="needs-validation">
         <div class="mb-3">
            <label class="form-label" for="title">Username</label>
            <input class="form-control" type="text" name="user[username]" id="username" placeholder="Username" required>
            <p class="valid-feedback">Looks Good!</p>
         </div>
         <div class="mb-3">
            <label class="form-label" for="title">email</label>
            <input class="form-control" type="text" name="user[email]" id="email" placeholder="email" required>
            <p class="valid-feedback">Looks Good!</p>
         </div>
         <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" name="user[password]" id="password" placeholder="Password" required>
            <p class="valid-feedback">Looks Good!</p>
         </div>
         <div class="mb-3">
            <button class="btn btn-success">Create Account!</button>
         </div>
      </form>
   </div>
</div>

